{
  "name": "r3lay-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter=r3lay dev",
    "build": "bun run --filter=r3lay build",
    "install:all": "bun install && bun install --filter=@r3lay/core && bun install --filter=@r3lay/ipfs && bun install --filter=@r3lay/chain"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@polkadot/api": "^16.5.2",
    "smoldot": "^2.0.39"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "shadcn-nuxt": "^2.3.2"
  }
}